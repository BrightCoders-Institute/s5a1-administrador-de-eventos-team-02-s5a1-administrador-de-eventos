<div class="events-wrapper">
  <div class="container">
    <div class="table-responsive">
       <h1>Lista de Eventos</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Descripción</th>
          <th>Fecha</th>
          <th>Ubicación</th>
          <th>Costo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @eventos.each do |evento| %>
          <tr>
            <td><%= evento.nombre %></td>
            <td><%= evento.descripcion %></td>
            <td><%= evento.fecha %></td>
            <td><%= evento.ubicacion %></td>
            <td><%= evento.costo %></td>
            <td>
              <%= link_to 'Mostrar', evento %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
