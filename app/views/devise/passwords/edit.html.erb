<div class="start-flex form-wrapper">
  <h2>Cambia tu contrase単a</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label :password, "Nueva contrase単a" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirma la contrase単a" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Cambiar contrase単a", class:"btn btn-success" %>
    </div>
  <% end %>
</div>
